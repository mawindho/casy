                                </Grid.ColumnDefinitions>

                                <TextBlock Style="{StaticResource CasyTextBlockStyle}" Grid.Column="0" Width="60" Text="" Visibility="{Binding Path=HasSubpopulations, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Label Style="{StaticResource CasyLabelStyle}" Grid.Column="1" Content="MeasureResultDataView_Label_Total" localization:Localization.IsLocalized="True" FontWeight="Bold" HorizontalAlignment="Left" FontSize="16" VerticalContentAlignment="Center" />
                                <Label Style="{StaticResource CasyLabelStyle}" Grid.Column="2" Content="{Binding Path=TotalCountsPerMl}" HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="14" />

